</head>

<body class="common-home layout-2 left-col">
    <nav id="top">
        <div class="container">
            <div class="left-nav pull-left">
                @{
                    string CurrentUser = "";
                }
                @if (String.IsNullOrEmpty(ViewBag.CurrentUser))
                {
                    CurrentUser = "";
                }
                else
                {
                    CurrentUser = "Welcome " + ViewBag.CurrentUser;
                }
                <div class="welcome_text">@CurrentUser</div>
                <div class="welcome_text">@TempData["Message2"]</div>
                
            </div>
            <div class="dropdown myaccount">
                    <a href="#" title="" class="dropdown-toggle" data-toggle="dropdown">
                        @if (String.IsNullOrEmpty(ViewBag.CurrentUser))
                        {
                            <span class="account_text hidden-xs hidden-sm hidden-md">Login & Register</span>
                        }
                        else
                        {
                            <span class="account_text hidden-xs hidden-sm hidden-md">@ViewBag.CurrentUser's Account</span>
                        }
                        <i class="fa fa-angle-down" aria-hidden="true"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-right myaccount-menu">
                        @if (String.IsNullOrEmpty(ViewBag.CurrentUser))
                        {
                            <li><a href="@Url.Action("Register","Login")">Register</a></li>
                            <li><a href="@Url.Action("SignIn","Login")">Login</a></li>
                        }
                        else
                        {
                            string CurrentUserId = Request.Cookies["UserId"].Value;
                            <li><a class="dropdown-item" href="~/Profile/Edit/@CurrentUserId">Profile</a></li>
                            <li><a href="~/Order/OrderHistory/@CurrentUserId">Order History</a></li>
                            <li><a href="@Url.Action("LogOut","Login")">Log Out</a></li>
                        }
                    </ul>
            </div>
        </div>
    </nav>
    <header>
        <div class="header-container">
            <div class="container page-container">
                <div class="row">
                    <div class="header-main">

                        <div class="header-logo">
                            <div id="logo">
                                <a href="~/Home/Index"><img src="~/Content/web2/catalog/logo3.png" title="logo" alt="logo" class="img-responsive" /></a>
                            </div>
                        </div>

                        @Html.Partial("~/Views/Shared1/_ShoppingCard.cshtml")
                    </div>
                </div>
            </div>

            <nav class="nav-container" role="navigation">
                <div class="nav-inner container page-container">

                    <div id="menu" class="main-menu">

                        <ul class="nav navbar-nav">
                            <li class="top_level home"><a href="~/Home/Index">Home</a></li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>


    </header>
    <div class="wrap-breadcrumb parallax-breadcrumb">
        <div class="container page-container"></div>
    </div>
    <script>


        function quickbox() {
            if ($(window).width() > 767) {
                $('.quickview-button').magnificPopup({
                    type: 'iframe',
                    delegate: 'a',
                    preloader: true,
                    tLoading: 'Loading image #%curr%...',
                });
            }
        }
        jQuery(document).ready(function () { quickbox(); });
        jQuery(window).resize(function () { quickbox(); });

    </script>
    <section class="page-container container">

        <div id="common-home" class="">
            <div class="home-container">

            </div>

            <div class="row">
                <aside id="column-left" class="col-sm-3 hidden-xs">
                    <div class="box category">
                        <div class="box-heading">Shop By Category</div>
                        <div class="box-content box-content-category">
                            <ul id="nav-one" class="dropmenu">
                                @{

                                    CategoryRepository cr = new CategoryRepository();
                                    int sayac = 0;
                                    foreach (Category item in cr.List().ProcessResult)
                                    {

                                        if (sayac % 2 == 0)
                                        {
                                            <li class="top_level main"><a href="~/Home/List/@item.CategoryId">@item.CategoryName</a></li>
                                            sayac++;
                                        }
                                        else
                                        {
                                            <li class="top_level main"><a href="~/Home/List/@item.CategoryId">@item.CategoryName</a></li>
                                            sayac++;
                                        }
                                    }

                                }


                            </ul>
                        </div>
                    </div>

                    <div class="box latest">
                        <div class="container">
                            <div class="box-heading">Latest Products</div>
                            <div class="box-content">


                                <div class="box-product  productbox-grid" id="latest-grid">
                                    <div class="product-items">
                                        @{

                                            ProductRepository pr = new ProductRepository();
                                            foreach (Product item in pr.GetLatestObj(1).ProcessResult)
                                            {
                                                <div class="border_box">
                                                    <div class="product_title">
                                                        <a href="~/Home/Detail/@item.ProductId">@item.ProductName</a>
                                                    </div>
                                                    <div class="product_img">
                                                        <a href="~/Home/Detail/@item.ProductId">
                                                            <img src="~/Upload/@item.Photo" alt="" border="0" height="130" />
                                                        </a>
                                                    </div>
                                                    <div class="prod_price">
                                                        <span class="price">@item.Price ₺</span>
                                                    </div>
                                                </div>
                                            }


                                        }

                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                    <span class="latest_default_width" style="display:none; visibility:hidden"></span>

                    <div id="czservicecmsblock" class="block service-block">
                        <div class="box">
                            <div class="box-heading">Our Brands</div>
                            <ul id="nav-one" class="dropmenu">
                                @{

                                    BrandRepository br = new BrandRepository();
                                    int sayac1 = 0;
                                    foreach (Brand item in br.List().ProcessResult)
                                    {
                                        if (sayac1 % 2 == 1)
                                        {
                                            <li class="top_level main"><a href="~/Home/ListByBrand/@item.BrandId">@item.BrandName</a></li>
                                            sayac1++;
                                        }
                                        else
                                        {
                                            <li class="top_level main"><a href="~/Home/ListByBrand/@item.BrandId">@item.BrandName</a></li>
                                            sayac1++;
                                        }
                                    }

                                }
                            </ul>
                        </div>
                    </div>


                </aside>

                <div id="content" class="col-sm-9">


                    <div class="box special">
                        <hr />
                        @RenderBody()
                    </div>
                </div>
            </div>
            <span class="special_default_width" style="display:none; visibility:hidden"></span>


            <span class="blog_default_width" style="display:none; visibility:hidden"></span>

            <script type="text/javascript">


                $(document).ready(function () {
                    $('.blogcarousel').owlCarousel({
                        items: 3,
                        singleItem: false,
                        navigation: false,
                        pagination: false,
                        itemsDesktop: [1199, 2],
                        itemsDesktopSmall: [991, 2],
                        itemsTablet: [575, 1]
                    });
                    // Custom Navigation Events
                    $(".czblog_next").click(function () {
                        $('.blogcarousel').trigger('owl.next');
                    })
                    $(".czblog_prev").click(function () {
                        $('.blogcarousel').trigger('owl.prev');
                    });
                });
                </script>
        </div>
    

    </section>
    <footer>


        <div id="bottom-footer" class="bottomfooter">
            <div class="container page-container">


                <p id="powered" class="powered">© 2019 Merve Gokpinar All Rights Reserved</p>
                <div class="paiement_logo_block footer-block">
                   
                </div>


            </div>
        </div>
    </footer>

 
</body>
</html>


