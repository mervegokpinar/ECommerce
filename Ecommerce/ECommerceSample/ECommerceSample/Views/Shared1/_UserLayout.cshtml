@using ECommerce.Repository
@using ECommerce.Entity

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Electronix Store</title>
    <meta http-equiv="Content-Type" content="text/html; charset=windows-1252" />
    @*<link rel="stylesheet" type="text/css" href="style.css" />*@
    <link href="~/Content/electronix/style.css" rel="stylesheet" />
    <!--[if IE 6]>
    <link rel="stylesheet" type="text/css" href="iecss.css" />
    <![endif]-->
    @*<script type="text/javascript" src="js/boxOver.js"></script>*@
    <script src="~/Content/electronix/js/boxOver.js"></script>
</head>
<body>
    <div id="main_container">
        <div class="top_bar">
            <div class="top_search">
                <div class="search_text"><a href="#">Advanced Search</a></div>
                <input type="text" class="search_input" name="search" />
                @*<input type="image" src="images/search.gif" class="search_bt" />*@
                <img src="~/Content/electronix/images/search.gif" class="search_bt" />
            </div>
            
            <div class="languages">
                <div class="lang_text">Languages:</div>
                <a href="#" class="lang"><img src="images/en.gif" alt="" border="0" /></a> <a href="#" class="lang"><img src="images/de.gif" alt="" border="0" /></a>
            </div>
        </div>
        <div id="header">
            <div id="logo"> 
                <a href="#">
                    <img src="~/Content/electronix/images/logo.png" alt="" border="0" width="237" height="140" />
                </a> 
            </div>
            <div class="oferte_content">
                <div class="top_divider"><img src="~/Content/electronix/images/header_divider.png" alt="" width="1" height="164" /></div>

                <div class="top_divider"><img src="~/Content/electronix/images/header_divider.png" alt="" width="1" height="164" /></div>
            </div>
            <!-- end of oferte_content-->
        </div>
        <div id="main_content">
            <div id="menu_tab">
                <div class="left_menu_corner"></div>
                <ul class="menu">
                    <li><a href="~/Home/ListAllProduct" class="nav1"> Home</a></li>
                    <li class="divider"></li>
                    <li><a href="#" class="nav2">Products</a></li>
                    <li class="divider"></li>
                </ul>
                <div class="right_menu_corner"></div>
            </div>
            <!-- end of menu tab -->
            <div class="crumb_navigation"> Navigation: <span class="current">Home</span> </div>
            <div class="left_content">
                <div class="title_box">Categories</div>
                <ul class="left_menu">

                    @{

                        CategoryRepository cr = new CategoryRepository();
                        int sayac = 0;
                        foreach (Category item in cr.List().ProcessResult)
                        {
                            if (sayac % 2 == 0)
                            {
                                <li class="even"><a href="~/Home/List/@item.CategoryId">@item.CategoryName</a></li>
                                sayac++;
                            }
                            else
                            {
                                <li class="odd"><a href="~/Home/List/@item.CategoryId">@item.CategoryName</a></li>
                                sayac++;
                            }
                        }

                    }



                </ul>
            </div>
            <!-- end of left content -->
            <div class="center_content">
                @RenderBody()
            </div>
            <!-- end of center content -->
            <div class="right_content">
                <div class="shopping_cart">
                    <div class="cart_title">Shopping cart</div>
                    <div class="cart_details">

                        @{ 

                            Order ord = (Order)Session["Order"];
                            int? adet = 0;
                            decimal? TotalPrice = 0;
                            if (ord != null)
                            {
                                foreach (OrderDetail item in ord.OrderDetails)
                                {
                                    adet += item.Quantity;
                                    TotalPrice += item.Price;
                                }
                            }

                        }

                        @Html.Label(adet.ToString()) <br />
                        <span class="border_cart"></span> Total: <span class="price">@TotalPrice.Value.ToString() ₺</span>
                    </div>
                    <div class="cart_icon"><a href="~/Order/DetailList" title="header=[Checkout] body=[&nbsp;] fade=[on]"><img src="~/Content/electronix/images/shoppingcart.png" alt="" width="48" height="48" border="0" /></a></div>
                </div>
                <div class="title_box">What’s new</div>

                @{

                    ProductRepository pr = new ProductRepository();
                    foreach (Product item in pr.GetLatestObj(1).ProcessResult)
                    {
                        <div class="border_box">
                            <div class="product_title">
                                <a href="~/Home/Detail/@item.ProductId">@item.ProductName</a>
                            </div>
                            <div class="product_img">
                                <a href="~/Home/Detail/@item.ProductId">
                                    <img src="~/Upload/@item.Photo" alt="" border="0" height="87" />
                                </a>
                            </div>
                            <div class="prod_price">
                            <span class="price">@item.Price ₺</span>
                            </div>
                        </div>
                    }


                }


                <div class="title_box">Brands</div>
                <ul class="left_menu">

                    @{

                        BrandRepository br = new BrandRepository();
                        int sayac1 = 0;
                        foreach (Brand item in br.List().ProcessResult)
                        {
                            if (sayac1 % 2 == 1)
                            {
                                <li class="odd"><a href="~/Home/ListByBrand/@item.BrandId">@item.BrandName</a></li>
                                sayac1++;
                            }
                            else
                            {
                                <li class="even"><a href="~/Home/ListByBrand/@item.BrandId">@item.BrandName</a></li>
                                sayac1++;
                            }
                        }

                    }



                </ul>
            </div>
            <!-- end of right content -->
        </div>
        <!-- end of main content -->
        <div class="footer">
            <div class="left_footer"> <img src="~/Content/electronix/images/footer_logo.png" alt="" width="170" height="49" /> </div>
            <div class="center_footer">
                Template name. All Rights Reserved 2008<br />
                <a href="http://csscreme.com"><img src="~/Content/electronix/images/csscreme.jpg" alt="csscreme" border="0" /></a><br />
                <img src="images/payment.gif" alt="" />
            </div>
            <div class="right_footer"> <a href="#">home</a> <a href="#">about</a> <a href="#">sitemap</a> <a href="#">rss</a> <a href="contact.html">contact us</a> </div>
        </div>
    </div>
    <!-- end of main_container -->
</body>
</html>
