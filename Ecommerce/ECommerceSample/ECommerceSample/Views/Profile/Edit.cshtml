@using ECommerce.Entity
@model Member

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared1/_MainLayout.cshtml";
}


<div id="content" class="col-sm-9">
    <ul class="breadcrumb">
        <li><a href="https://demo.codezeel.com/opencart/OPC05/OPC050122/index.php?route=common/home"><i class="fa fa-home"></i></a></li>
        <li><a href="https://demo.codezeel.com/opencart/OPC05/OPC050122/index.php?route=account/account">Account</a></li>
        <li><a href="https://demo.codezeel.com/opencart/OPC05/OPC050122/index.php?route=account/edit">Edit Information</a></li>
    </ul>
    <h1>My Account Information</h1>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.RoleId)
        @Html.HiddenFor(model => model.UserId)

        <fieldset>
            <legend>Edit Your Personal Details</legend>
            
            <div class="form-group required">
                <label class="col-sm-2 control-label" for="FirstName">First Name </label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group required">
                <label class="col-sm-2 control-label" for="LastName">Last Name</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.LastName, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group required">
                <label class="col-sm-2 control-label" for="Email">E-Mail</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group required">
                <label class="col-sm-2 control-label" for="Password">Password</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group required">
                <label class="col-sm-2 control-label" for="Address">Address</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.Address, new { @class = "form-control" })
                </div>
            </div>
        </fieldset>
        <div class="buttons clearfix">

            <div class="pull-right">
                <button type="submit" value="Edit" class="btn btn-primary">EDIT</button>
                    
            </div>
            @{
                string userId = Convert.ToString(Model.UserId);
                <div class="pull-left"><a href="~/Profile/Delete/@userId" class="btn btn-danger">Delete</a></div>
            }


        </div>
                }
    </div>

